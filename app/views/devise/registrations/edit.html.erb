<div class="row">
    <div class="col-md-3 order-md-1" >
      <ul class="_list-group" style="margin:0px; padding:0px; border-radius:0px;">
        <a href="/monprofil" class="list-group-item">Mon profil</a>
        <a href="/monprofil/messages" class="list-group-item">Messages</a>
        <a href="/monprofil/mes_clients" class="list-group-item">Mes clients </a>
      </ul>
    </div>

    <div class="col-md-9 order-md-2">
      <div class="row">
<h1 class="mb-3 font-weight-bold">Changer mes parametres d'authentification </h1>
      <div class="col-md-6 order-md-1">


<div class="row">

		<div class="col-md-12 order-md-1">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put,class:"needs-validation", novalidate:true  }) do |f| %>
              <%= devise_error_messages! %>

      <div class="mb-3">
        <label for="username">Nom d'utilisateur</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-fw fa-user"></i></span>
          </div>
          <%= f.text_field :username, class:"form-control" %>
          <div class="invalid-feedback" style="width: 100%;">
            Un nom d'utilisateur valide est requit
          </div>
        </div>
      </div>

        <div class="mb-3">
          <label for="username">Numéro de téléphone </label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-fw fa-phone"></i></span>
            </div>
                <%= f.text_field :phonenumber, class:"form-control", require:true %>
            <div class="invalid-feedback" style="width: 100%;">
              Your username is required.
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="username">Email </label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-fw fa-envelope"></i></span>
            </div>
                <%= f.email_field :email, class:"form-control", require:true %>
            <div class="invalid-feedback" style="width: 100%;">
              Your username is required.
            </div>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
            </div>
                  <%= f.password_field :password, autocomplete: "new-password" , class:"form-control"%>
            <div class="invalid-feedback" style="width: 100%;">
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          </div>
        </div>

        <div class="mb-3">
        <%= f.label :password_confirmation %>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
            </div>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
            <div class="invalid-feedback" style="width: 100%;">
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          </div>
        </div>


        <div class="mb-3">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
            </div>
                  <%= f.password_field :current_password, autocomplete: "new-password" , class:"form-control"%>
          </div>
        </div>


              <div class="actions">
                <%= f.submit "Enrégistrer les modifications" , class:"btn btn-block btn-warning btn-lg text-white" %>
              </div>
            <% end %>

            <h3>Je veux me désinscrire</h3>

            <p><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"btn btn-block btn-danger btn-lg text-white"  %></p>


          </div>
         </div>
       </div>
     </div>
   </div>
      </div>
         
