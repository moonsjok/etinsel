<!-- Icon Cards-->
<div class="row">
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-primary o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-fw fa-list"></i>
        </div>
        <div class="mr-5 font-weight-bold  text-white">IDENTITÉ</div>
      </div>

      <a class="card-footer text-white clearfix small z-1  font-weight-bold" href="/monprofil/identiter" >
  Modifier
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-warning o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-fw fa-user"></i>
        </div>
        <div class="mr-5 font-weight-bold  text-white">LOGIN</div>
      </div>
      <a class="card-footer text-white clearfix small z-1  font-weight-bold" href="/monprofil/login">
           Modifier
      </a>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-success o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-fw fa-lock"></i>
        </div>
        <div class="mr-5  font-weight-bold  text-white">MOT DE PASSE</div>
      </div>
      <a class="card-footer text-white clearfix small z-1  font-weight-bold" href="/monprofil/mot_de_passe" title="">
         Modifier
      </a>
    </div>
  </div>

<div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-danger o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <i class="fa fa-fw fa-comments" aria-hidden="true"></i>
        </div>
        <div class="mr-5 font-weight-bold text-white">MESSAGES </div>
      </div>
      <a class="card-footer text-white clearfix small z-1  font-weight-bold" href="/monprofil/message" title="">
             Lire
      </a>
    </div>
  </div>

</div>
<div class="row">
   <div class="col-md-12" style="min-height:300px; text-align:justify;">
     <h1>A propos de vous </h1>
     <%- if @identity.about.blank? -%>
        <p class="text-justify font-weight-bold" style="font-size:20px; line-height:25px;" >
          Veuillez <a href="/monprofil/identiter"> compléter votre identité</a>, en renseignant votre nom complet,
         votre adresse, en précisant si vous êtes un particulier ou une agence,
          et parler en quelques mots de vous ou de votre structure.</p>
          <br/>
          <a href="/monprofil/identiter" class="btn btn-warning font-weight-bold text-white"> Compléter mon identité</a>
          <%else%>
     <%= raw(@identity.about) %>
    <%end%>
   </div>

</div>
