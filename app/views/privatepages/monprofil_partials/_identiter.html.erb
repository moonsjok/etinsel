<div class="row">

<div class="col-md-12 order-md-1">
    <h1 class="mb-3">Votre identiter </h1>

      <%= form_for @identiter, url: { action: "identiter_save"}, html: {class:"needs-validation", novalidate:""} do |f| %>

         <div class="row">
           <div class="col-md-3 mb-3">
             <label for="country">Je suis </label>
             <%= select_tag(:typeannonceur, options_for_select([['Agence Immobillière', 'Agence Immobillière'],['Démarcheur','Démarcheur'],['Annonceur','Annonceur'],['Propriétaire','Propriétaire'],['Particulier','Particulier'], 5) , class: "custom-select d-block w-100") %>
             <div class="invalid-feedback">
               Please select a valid country.
             </div>
           </div>
           <div class="col-md-8 mb-3">
             <label for="state">Nom complet ou raison social</label>
             <%= f.text_field :name , class:"form-control" ,required:true %>
             <div class="invalid-feedback">
               Please provide a valid state.
             </div>
           </div>

         </div>

         <%=f.hidden_field :user_id , value:@user.id %>
         <%= f.submit "Enrégistrer la modification" , class:"btn btn-warning btn-lg btn-block text-white" %>
     <% end %>
<br/>
  </div>
</div>
