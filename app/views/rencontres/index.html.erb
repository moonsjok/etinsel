<div class="container-fluid" >
	<div class="row" >
	    <div class="col-12" >
		    <h1>Inscriptions récentes</h1>
		</div>
	</div>
	<div class="row mt-1 mb-5" >
	    <% for user in User.all.order("id DESC") %>
		    
				<div class="col-1 border border-3 border-black" onclick="window.location='<%=rencontres_profile_path(user.id)%>'"  style="cursor:pointer" >
					<!-- <%= user.id%> -->
					<br/>
					<%if photo = Photo.find_by(role: :profil_pic, user_id: user.id) %>
					   <img src="/uploads/<%= photo.name %>" height="80" width="80" />
					<%else%>
					   <img src="/img/Inscrit_avatar.png" height="80" width="80" />				
					<%end%>
					<br>
					<%= user.username%>
					<div class="row" style="width:100%; font-size:10px; background:rgba(0,0,0,0.5); padding:0px; margin:0px;"> 
						<div class="col-12 p-0 mt-0 mb-0 ml-0 mr-0 textt-center" >
