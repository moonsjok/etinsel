<%= form_for @identity  do |form| %>
  <% if @identity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(identity.errors.count, "error") %> prohibited this identity from being saved:</h2>

      <ul>
      <% @identity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="col-md-3 mb-3 font-weight-bold">
      <label for="country">Je suis </label>
       <%= form.select :typeannonceur, [["Je suis le",""],"Propriétaire","Agence immobilière","Démarcheur","Annonceur","Particulier"], {}, {:class => 'form-control', required: true} %>
      <div class="invalid-feedback">
        Merci de choisir une proposition
      </div>
    </div>
    <div class="col-md-9 mb-3 font-weight-bold">
      <label for="state">Nom complet ou raison social</label>
      <%= form.text_field :name , class:"form-control" ,required:true %>
      <div class="invalid-feedback">
        Ce champ est obligatoire .
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-5 mb-3 font-weight-bold">
      <label for="country">Pays</label>
      <%= form.text_field :country , class:"form-control" ,required:true %>
      <div class="invalid-feedback">
        Please select a valid country.
      </div>
    </div>
    <div class="col-md-4 mb-3 font-weight-bold">
      <label for="state">Ville</label>
          <%= form.text_field :city , class:"form-control" ,required:true %>
      <div class="invalid-feedback">
        Please provide a valid state.
      </div>
    </div>
    <div class="col-md-3 mb-3 font-weight-bold">
      <label for="zip">Code postal / Boite postale</label>
            <%= form.text_field :zip , class:"form-control" %>
      <div class="invalid-feedback">
        Zip code required.
      </div>
    </div>
  </div>

  <div class="mb-3 font-weight-bold">
    <label for="address2">Address <span class="text-muted">(Optional)</span></label>
        <%= form.text_field :adress , class:"form-control" ,placeholder:"1234 Rue Alla " %>
  </div>

  <div class="mb-3 font-weight-bold">
    <%= form.label "A propos de vous", for:"identity[about]" %>
       <%= form.text_area :about, size: "24x6" , class:"form-control" ,placeholder:"1234 Main St",required:true %>
     <div class="invalid-feedback">
    A propos de vous veuillez ecrire quelques mots sur vous .
  </div>
</div>

	<script data-sample="1">
		CKEDITOR.replace( 'identity_about', {
			// Define the toolbar groups as it is a more accessible solution.
			toolbarGroups: [
				{"name":"basicstyles","groups":["basicstyles"]},
				{"name":"links","groups":["links"]},
				{"name":"paragraph","groups":["list","blocks"]},
				{"name":"document","groups":["mode"]},
				{"name":"insert","groups":["insert"]},
				{"name":"styles","groups":["styles"]},
				{"name":"about","groups":["about"]}
			],
			// Remove the redundant buttons from toolbar groups defined above.
			removeButtons: 'Underline,Strike,Subscript,Superscript,Anchor,Styles,Specialchar'
		} );
	</script>
  <!-- div class="field" -->
  <!--  <%= form.label :user_id %> -->
    <%= form.hidden_field :user_id, value:@user.id %>
  <!-- /div -->

  <div class="actions">
    <%= form.submit "Mettre à jour mon identité " ,class:"btn btn-block btn-warning text-white font-weight-bold"  %>
  </div>
<% end %>
